package spring_practice.di.ui;

import spring_practice.di.entity.Exam;

public class GridExamConsole implements ExamConsol {

	private Exam exam;
	
	//	기본 생성자
	public GridExamConsole() {
		// TODO Auto-generated constructor stub
	}
	
	//	생성자
	public GridExamConsole(Exam exam) {
		this.exam = exam;
	}



	@Override
	public void print() {
		System.out.println("--------------------");
		System.out.println("  total      avg");
		System.out.println("--------------------");
		 System.out.printf("    %d      %.2f\n", exam.total(), exam.avg());
		System.out.println("--------------------");
	}

	//	setter
	@Override
	public void setExam(Exam exam) {
		this.exam = exam;
	}

}
